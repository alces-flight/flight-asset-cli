# Sets up bundler
ENV['BUNDLE_GEMFILE'] ||= File.join(__dir__, '../Gemfile')
require 'rubygems'
require 'bundler'
Bundler.setup(:default)

# Load the config file
# NOTE: Moving this file name to *-with-config makes the  first postional
# argument the config path
args = ARGV.dup
if /.*-with-config\Z/.match? __FILE__
  module FlightAsset; end
  FlightAsset.const_set('CONFIG_PATH', args.shift)
end
require_relative '../lib/flight_asset/config'

# Display the help by default
args << '--help' if args.empty?

# Selects the CLI components
parts = [:shared]
if FlightAsset::Config::CACHE.__meta__.generate_error_messages.empty?
  parts << :main
else
  parts << :unconfigured
end

# Enables the development mode
if FlightAsset::Config::CACHE.development?
  begin
      Bundler.setup(:default, :development)
      require 'pry'
      require 'pry-byebug'
      parts << :development
  rescue StandardError, LoadError
    Bundler.setup(:default)
    $stderr.puts "An error occurred when enabling development mode!"
  end
end

# Builds and runs the CLI
require_relative '../lib/flight_asset/cli'
FlightAsset::Config::CACHE.logger.info 'Running Command'
FlightAsset::CLI.build(*parts).run!(*args)

